#!/usr/bin/env bash
set -e

echo "======================================================"
echo "Setup minikube ${MINIKUBE_VERSION} environment"
echo "======================================================"
export MINIKUBE_WANTUPDATENOTIFICATION=false

echo "======================================================"
echo "Starting minikube ${MINIKUBE_VERSION} with kubernetes ${KUBERNETES_VERSION}"
echo "======================================================"
minikube start --memory=${MEMORY} --vm-driver=${MINIKUBE_DRIVER} --kubernetes-version="${KUBERNETES_VERSION}" -p argocd --insecure-registry "imac.fritz.box:5000"
kubectl config use-context argocd
